{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true, // Enables generating .d.ts files
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
